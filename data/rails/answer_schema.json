{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GuardedAnswer",
  "type": "object",
  "properties": {
    "answer": {
      "type": "string",
      "minLength": 1
    },
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["doc_id", "chunk_id"],
        "properties": {
          "doc_id": {
            "type": "string",
            "minLength": 1
          },
          "chunk_id": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "minItems": 1
    },
    "toxicity": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["answer", "citations"],
  "additionalProperties": true
}
